@model MinhDucEvent.ViewModels.System.Users.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}
<ul class="breadcrumb">
    <li><a href="/"> <localize>Home</localize></a> <span class="divider">/</span></li>
    <li localize-content class="active">Login</li>
</ul>
<h3 localize-content> Login</h3>
<hr class="soft" />

<div class="row">
    <div class="span4">
        <div class="well">
            <h5 localize-content>CREATE YOUR ACCOUNT</h5><br />
            <localize>Enter your e-mail address to create an account. </localize><br /><br /><br />
            <form action="register.html">

                <div class="controls">
                    <a localize-content href="/@culture/Account/Register" class="btn block">CREATE YOUR ACCOUNT</a>
                </div>
            </form>
        </div>
    </div>
    <div class="span1"> &nbsp;</div>
    <div class="span4">
        <div class="well">
            <h5 localize-content>ALREADY REGISTERED ?</h5>
            <form action="/@culture/Account/Login" method="post">
                <div class="control-group">
                    <label localize-content class="control-label" for="inputEmail1">UserName</label>
                    <div class="controls">
                        <input class="span3" type="text" asp-for="UserName" placeholder="Email">
                        <span asp-validation-for="UserName" class="text-error"></span>
                    </div>
                </div>
                <div class="control-group">
                    <label localize-content class="control-label" for="inputPassword1">Password</label>
                    <div class="controls">
                        <input type="password" class="span3" asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-error"></span>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button localize-content type="submit" class="btn">Sign in</button> <a localize-content href="forgetpass.html">Forget password?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>	